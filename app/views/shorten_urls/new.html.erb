<% provide(:title, 'Shorten-URLs') %>
<h1>Shorten-URLs</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
		<%= form_for @url , url:shorten_urls_path do |f| %>
			<% if @url.errors.any? %>
				<div id="error_explanation">
					<h2><%= @url.errors.count %>件のエラーがあります。</h2>
					
					<ul>
						<% @url.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= f.label :original_url %>
			<%= f.text_field :original_url,class: 'form-control' %>
			<%= f.submit "Create Shortened URL", class: "btn btn-primary" %>
		<% end %>
    </div>
</div>
